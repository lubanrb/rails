# Logrotate configuration for Rails

<%= log_path.join("#{stage}.log") %> {
  hourly
  maxsize 5M
  maxage <%= logrotate_max_age %>
  rotate <%= logrotate_count %>
  missingok
  compress
  compresscmd <%= `which gzip`.chomp %>
  delaycompress
  dateext
  dateformat -%Y%m%d-%H%M%S
  copytruncate
  olddir archived_logs
}
